<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User List</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://cdn.tailwindcss.com/3.4.16"></script>
</head>
<body class="text-white">
    <div class="w-full h-full bg-zinc-900 p-10">

        <div class="mt-3 mb-3">
            <a class="text-blue-500" href="/">Back to home</a>
        </div>

        <h1 class="text-3xl tracking-tighter mb-3">Created Users</h1>


        <% if(users.length === 0) { %>
            <h5 class="text-zinc-500 tracking-tighter mb-3">No Users</h5>
        <% } else { %>
            <div class="users flex gap-3 flex-wrap">
                <% users.forEach(user => { %>
                    <div class="user max-w-72 p-4 bg-zinc-800 rounded-lg">
                        <div class="w-full h-52 rounded-lg overflow-hidden bg-zinc-700">
                            <img class="w-full h-full object-cover" src="<%= user.image %>" alt="User Image">
                        </div>
                        <h3 class="text-xl mt-3 tracking-tighter"> <%= user.name %> </h3>
                        <h5 class="text-zinc-500"><%= user.email %></h5>
                        <div class="flex-gap">
                            <a class="text-blue-500" href="/edit/<%= user._id %>">Edit User</a>
                            <a class="text-red-500" href="/delete/<%= user._id %>">Delete User</a>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } %>

    </div>
</body>
</html>
